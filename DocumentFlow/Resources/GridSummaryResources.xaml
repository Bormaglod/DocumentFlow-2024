<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:syncfusion="http://schemas.syncfusion.com/wpf">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Syncfusion.Themes.Windows11Light.WPF;component/SfDatagrid/SfDatagrid.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="TableSummaryStyleDefault" 
           TargetType="syncfusion:GridTableSummaryCell"
           BasedOn="{StaticResource SyncfusionGridTableSummaryCellStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    <Style x:Key="TableSummaryStyleNumeric" 
           TargetType="syncfusion:GridTableSummaryCell"
           BasedOn="{StaticResource SyncfusionGridTableSummaryCellStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>
    <Style x:Key="GroupSummaryStyleDefault" 
           TargetType="syncfusion:GridGroupSummaryCell"
           BasedOn="{StaticResource SyncfusionGridGroupSummaryCellStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>
    <Style x:Key="GroupSummaryStyleNumeric" 
           TargetType="syncfusion:GridGroupSummaryCell"
           BasedOn="{StaticResource SyncfusionGridGroupSummaryCellStyle}">
        <Setter Property="HorizontalContentAlignment" Value="Right"/>
    </Style>
</ResourceDictionary>